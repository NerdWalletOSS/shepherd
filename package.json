{
  "name": "@nerdwallet/shepherd2",
  "version": "1.0.0",
  "description": "A utility for applying code changes across many repositories",
  "scripts": {
    "build": "babel src --out-dir lib --extensions \".js,.ts\"",
    "build:watch": "npm run build -- --watch --verbose",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "fix-lint": "npm run lint -- --fix",
    "test": "jest src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NerdWallet/shepherd2.git"
  },
  "keywords": [
    "codemod",
    "codemods",
    "migration"
  ],
  "author": "Nathan Walters",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/NerdWallet/shepherd2/issues"
  },
  "homepage": "https://github.com/NerdWallet/shepherd2#readme",
  "bin": {
    "shepherd2": "./lib/cli.js"
  },
  "dependencies": {
    "@octokit/rest": "^15.9.4",
    "@types/js-yaml": "^3.11.2",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.1",
    "child-process-promise": "^2.2.1",
    "commander": "^2.16.0",
    "fs-extra": "^6.0.1",
    "fs-extra-promise": "^1.0.1",
    "joi": "^13.4.0",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "log-symbols": "^2.2.0",
    "netrc": "^0.1.4",
    "ora": "^2.1.0",
    "preferences": "^1.0.2",
    "simple-git": "^1.96.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-typescript": "^7.0.0-beta.54",
    "@types/fs-extra": "^5.0.4",
    "@types/fs-extra-promise": "^1.0.7",
    "@types/jest": "^23.3.0",
    "@types/joi": "^13.4.0",
    "@types/lodash": "^4.14.112",
    "@types/log-symbols": "^2.0.0",
    "@types/node": "^10.5.2",
    "@types/ora": "^1.3.4",
    "jest": "^23.4.1",
    "jest-plugin-fs": "^2.9.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ]
  }
}
